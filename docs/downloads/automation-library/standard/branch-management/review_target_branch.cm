# -*- mode: yaml -*-
manifest:
  version: 1.0

automations:
  release_branch_review:
    if:
      - {{ pr.target | includes(term='release-') }}
    run:
      - action: require-reviewers@v1
        args:
          reviewers: ['org/release-managers']
      - action: add-reviewers@v1
        args:
          reviewers: ['org/release-managers']