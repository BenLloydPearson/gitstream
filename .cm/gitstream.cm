# -*- mode: yaml -*-

manifest:
  version: 1.0

config:
  admin:
    users: [vim-zz]

automations:
  estimated_time_to_review:
    if:
      - {{ files | match(regex=r/\.(md|txt|png|svg|webp)$/) | every }}
      - {{ pr.author | match(list=maintainers) }}
    run:
      - action: approve@v1
      - action: merge@v1

maintainers:
  - 'vim-zz'
